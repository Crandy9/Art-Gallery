        <div class="container d-flex justify-content-center">
            <p style= "white-space:pre";>&copy; 2022 - Developed by </p>
            <a class = "text-muted hover_black" target="_blank" rel= "noreferrer"
            style="text-decoration:none;"
            href= "https://lctechnologies.azurewebsites.net/">LC Technologies</a> 
            <p style= "white-space:pre";> - Jesus Christ is King </p>
        </div>
    </footer>*@
    <!--footer with transluscent background-->
    <footer class="footer text-center text-white">
        <!-- Grid container -->
          <div class="container d-flex justify-content-center">
              <!-- Section: Social media -->
              <section>
                  <!-- Mercari -->
                  <a 
                    title = "Mercari"
                    target="_blank"
                    href="https://jp.mercari.com/user/profile/430366596"
                    role="button"
                    ><img src="~/images/mercari_icon.png" 
                    style="width: 11%;"></a>
              </section>
          <!-- Section: Social media -->
          </div>
          <!-- Grid container -->
          <!-- Copyright -->
          <div class="bg-dark text-center p-3 text-muted" style="background-color: rgba(0,0,0,0.1);">
            © 2022 - 
            <a class="text-muted hover_black" style="text-decoration:none;" 
            href="https://lctechnologies.azurewebsites.net/" target="_blank">
                Developed by LC Technologies</a>
             - Jesus Christ is King
          </div>
           <!-- Copyright -->
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>